
public class VariableTypeEx02 {
	public static void main(String [] args) {
		
//		1byte : -128~127
		byte b1=127;
	
		System.out.println("bi = " + b1);
		
 	byte b2=128;
		// short=2byte : -32,768 ~ 32,767
		short s1 = 32767;
		System.out.println("si = " + s1);
		
		short s2 = 32768;
//		over number error
		
		int i1 = 123456789;
//		int i2 = 3213547825; over number error
		System.out.println("i1 = " + i1);
		
	}

}
